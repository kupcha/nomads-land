  <script type='text/javascript' tripLat="<%= tripLat %>" tripLong="<%= tripLong %>">
// Initialize and add the map
function initMap() {
  // The location of Uluru
  var lat = parseFloat(document.getElementById('tripLat').value);
  var lng = parseFloat(document.getElementById('tripLong').value);
  const uluru = { lat: lat, lng: lng };
  // The map, centered at Uluru
  const map = new google.maps.Map(document.getElementById("map"), {
    zoom: 13,
    center: uluru,
  });
  const centerMarker = new google.maps.Marker({
    position: uluru,
    map: map
  });

  var recsMade = parseInt(document.getElementById('recsMade').value);
  var activityRecsMade = parseInt(document.getElementById('activityRecsMade').value);
  var foodRecsMade = parseInt(document.getElementById('foodRecsMade').value);
  var sightRecsMade = parseInt(document.getElementById('sightRecsMade').value);
  var latList = document.getElementsByClassName('activityLat');
  var longList = document.getElementsByClassName('activityLong');
  for (var i = 0; i < activityRecsMade; i++){
    var tipLat = parseFloat(latList[i].value);
    var tipLong = parseFloat(longList[i].value);
    const tipMarker = {lat: tipLat, lng: tipLong };
  // The marker, positioned at Uluru
  const marker = new google.maps.Marker({
    position: tipMarker,
    map: map,
    icon: {
      url: `https://raw.githubusercontent.com/Concept211/Google-Maps-Markers/master/images/marker_blue${i + 1}.png`
    }
  });
}
var foodLat = document.getElementsByClassName('foodLat');
var foodLong = document.getElementsByClassName('foodLong');
  for (var j = 0; j < foodRecsMade; j++){
    var tipLat = parseFloat(foodLat[j].value);
    var tipLong = parseFloat(foodLong[j].value);
    const tipMarker = {lat: tipLat, lng: tipLong };
  // The marker, positioned at Uluru
  const marker = new google.maps.Marker({
    position: tipMarker,
    map: map,
    icon: {
      url: `https://raw.githubusercontent.com/Concept211/Google-Maps-Markers/master/images/marker_red${j + 1}.png`
    }
  });
}
var sightLat = document.getElementsByClassName('sightLat');
var sightLong = document.getElementsByClassName('sightLong');
  for (var k = 0; k < sightRecsMade; k++){
    var tipLat = parseFloat(sightLat[k].value);
    var tipLong = parseFloat(sightLong[k].value);
    const tipMarker = {lat: tipLat, lng: tipLong };
  // The marker, positioned at Uluru
  const marker = new google.maps.Marker({
    position: tipMarker,
    map: map,
    icon: {
      url: `https://raw.githubusercontent.com/Concept211/Google-Maps-Markers/master/images/marker_green${k + 1}.png`
    }
  });


  }

}
</script>

</head>

