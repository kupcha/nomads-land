  <form id="tripLocation">
    <input type="hidden" id="tripLat" value="<%= tripLat %>">
    <input type="hidden" id="tripLong" value="<%= tripLong %>">
    <input type="hidden" id="recsMade" value="<%= recsMade %>">
    <input type="hidden" id="activityRecsMade" value="<%= activityRecsMade %>">
    <input type="hidden" id="foodRecsMade" value="<%= foodRecsMade %>">
    <input type="hidden" id="sightRecsMade" value="<%= sightRecsMade %>">
    <% if (activityRecsMade == 1){ %>
      <input type="hidden" class="activityLocation" value="<%= activityLocation %>">
      <input type="hidden" class="activityLat" value="<%= activityLats %>">
      <input type="hidden" class="activityLong" value="<%= activityLong %>">
    <% }else if (activityRecsMade > 1) { %>
    <% for (var i = 0; i < recsMade; i++){ %>
      <input type="hidden" class="activityLocation" value="<%= activityLocation[i] %>">
      <input type="hidden" class="activityLat" value="<%= activityLats[i] %>">
      <input type="hidden" class="activityLong" value="<%= activityLong[i] %>">
    <% } %>
    <% } %>

    <% if (foodRecsMade == 1){ %>
      <input type="hidden" class="foodLocation" value="<%= foodLocation %>">
      <input type="hidden" class="foodLat" value="<%= foodLat %>">
      <input type="hidden" class="foodLong" value="<%= foodLong %>">
    <% }else if (foodRecsMade > 0){ %>
    <% for (var i = 0; i < foodRecsMade; i++){ %>
      <input type="hidden" class="foodLocation" value="<%= foodLocation[i] %>">
      <input type="hidden" class="foodLat" value="<%= foodLat[i] %>">
      <input type="hidden" class="foodLong" value="<%= foodLong[i] %>">
    <% } %>
    <% } %>

    <% if (sightRecsMade == 1){ %>
      <input type="hidden" class="sightLocation" value="<%= sightLocation %>">
      <input type="hidden" class="sightLat" value="<%= sightLat %>">
      <input type="hidden" class="sightLong" value="<%= sightLong %>">
    <% }else if (sightRecsMade > 0){ %>
    <% for (var i = 0; i < sightRecsMade; i++){ %>
      <input type="hidden" class="sightLocation" value="<%= sightLocation[i] %>">
      <input type="hidden" class="sightLat" value="<%= sightLat[i] %>">
      <input type="hidden" class="sightLong" value="<%= sightLong[i] %>">
    <% } %>
    <% } %>
  </form>


  <br><br>
  <div class="survey" id="survey">
    <h1> my trip to<br><span class="place">
        <%= location %>
      </span></h1>
    <br><br>
  </div>
  <!--The div element for the map -->
  <div id="map"></div><br>
  <div id="tips">
    <h3><b>your tips: </b></h3>
    <h4>do:</h4>
    <% if (activityRecsMade == 1){ %>
      <div id="tip">
        1. <%= activityLocation %>
      </div>
    <% }else{ %>
      <div id="tipList">
    <% for (var i = 0; i < activityRecsMade; i++){ %>
      <div id="tip<%= i %>">
        <%= i + 1 %>. <%= activityLocation[i] %> <br>
      </div>
    <% } %>
    <% } %>
    <h4>eat:</h4>
    <% if (foodRecsMade == 1){ %>
      <div id="tip">
        1. <%= foodLocation %>
      </div>
    <% }else{ %>
      <div id="tipList">
    <% for (var i = 0; i < foodRecsMade; i++){ %>
      <div id="tip<%= i %>">
        <%= i + 1 %>. <%= foodLocation[i] %> <br>
      </div>
    <% } %>
    <% } %>
    <h4>see:</h4>
    <% if (sightRecsMade == 1){ %>
      <div id="tip">
        1. <%= sightLocation %>
      </div>
    <% }else{ %>
      <div id="tipList">
    <% for (var i = 0; i < sightRecsMade; i++){ %>
      <div id="tip<%= i %>">
        <%= i + 1 %>. <%= activityLocation[i] %> <br>
      </div>
    <% } %>
    <% } %>

  </div>

